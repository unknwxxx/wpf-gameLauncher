<UserControl x:Class="launcher_master.СustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launcher_master.СustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="320">

    <Grid Width="320" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center">
        <PasswordBox x:Name="PasswordTextBox" Width="320" Height="60" HorizontalAlignment="Center" Style="{StaticResource PasswordBoxStyle}" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="#26FFFFFF"  SelectionBrush="White" FontFamily="Inter" Foreground="White" CaretBrush="White" MaxLength="30" Padding=" 15,0,0,0" FontSize="8"/>
        <Button x:Name="HidePasswordButton" Width="30" Height="30" Margin="0,0,10,0" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" ClipToBounds="True" SnapsToDevicePixels="True" AutomationProperties.IsOffscreenBehavior="Onscreen">
        </Button>

    </Grid>

</UserControl>
