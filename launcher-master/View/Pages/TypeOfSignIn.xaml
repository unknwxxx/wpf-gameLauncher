<Page x:Class="launcher_master.View.Pages.TypeOfSignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launcher_master.View.Pages" 
      xmlns:AttachedProperties="clr-namespace:launcher_master.Attached_Properties"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="1040"
      Title="TypeOfSignIn">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="Scroll" Grid.Row="1" Margin="3" Width="Auto" Height="Auto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Border 
                Margin="0, 20, 0, 20"
                MinHeight="745"
                MinWidth="430"
                Background="{StaticResource SearchBackgroundBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="6">
                <Grid>
                    <Path Data="{StaticResource EpicIcon}"
                          Width="43"
                          Margin="0, 50, 3 , 0"
                          Style="{StaticResource DragGamesLogoStyle}"/>

                    <TextBlock Text="CHOOSE HOT TO SIGN IN TO YOUR DRAG ACCOUNT"
                               FontFamily="Brutal Type"
                               FontWeight="Bold"
                               FontSize="12"
                               Foreground="{StaticResource CaptionFontBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0, 131, 0, 0"
                               />

                    <StackPanel Margin="0, 166, 0, 0">
                        <AttachedProperties:LoginServiceButtons/>
                    </StackPanel>
                </Grid>

            </Border>
        </ScrollViewer>
    </Grid>
</Page>
